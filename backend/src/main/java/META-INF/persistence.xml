        <class>ristaurace.model.MenuEntity</class>
        <class>ristaurace.model.MnozstviEntity</class>
        <class>ristaurace.model.ObjednaneZboziEntity</class>
        <class>ristaurace.model.ObjednavkaEntity</class>
